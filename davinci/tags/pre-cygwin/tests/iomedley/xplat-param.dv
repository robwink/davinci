# File xplat-param.dv
#
# Parameter file for cross platform tests for daVinci.
# Dependent files: xplat-s.dv, xplat-t.dv

# source image
src_img = "digits.isis"

# temporary directory and file names' prefix
tmpdir = "tmp"
tmppfx = tmpdir//"/foo."

# parallel arrays of various formats to be tested
types   = {"isis","vicar","ppm", "pgm", "tif", "gif" }
orgs    = {"bsq", "bsq",  "bip", "bip", "bsq", "bsq" }
nplanes = { 10,    10,     3,     1,     3,     3    }
fmts    = {"int", "float","byte","byte","byte","byte"}

# number of elements in the parallel array above
n = 6

